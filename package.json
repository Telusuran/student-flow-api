{
    "name": "student-flow-monorepo",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev --workspace=apps/web\" \"npm run dev --workspace=apps/api\" \"npm run dev --workspace=apps/cms\"",
        "dev:web": "npm run dev --workspace=apps/web",
        "dev:api": "npm run dev --workspace=apps/api",
        "dev:cms": "npm run dev --workspace=apps/cms",
        "build": "npm run build --workspaces"
    },
    "devDependencies": {
        "concurrently": "9.2.1"
    }
}